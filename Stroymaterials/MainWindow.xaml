<Window x:Class="Stroymaterials.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stroymaterials"
        mc:Ignorable="d"
        Title="Вход и Регистрация" Height="600" Width="800" FontSize="20">
    <Grid x:Name="grid_main" Background="#FFCFE6E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image_logo" HorizontalAlignment="Left" Height="122" Margin="87,10,0,0" VerticalAlignment="Top" Width="161" Source="index.png"/>
        <Label x:Name="label_logo" Content="ООО «Стройматериалы»" HorizontalAlignment="Left" Height="60" Margin="270,27,0,0" VerticalAlignment="Top" Width="475" FontSize="40" Foreground="#FF4D766B"/>
        <Frame x:Name="main_frame" Content="" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <TextBlock HorizontalAlignment="Left" Margin="270,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="40" FontWeight="Bold" 
                   Text="{Binding ElementName=main_frame, Path=Content.Title}" Foreground="#FF4D766B"/>
    </Grid>

</Window>
