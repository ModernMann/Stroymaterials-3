<Page x:Class="Stroymaterials.PageAdmin.Page_Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stroymaterials.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Page_Users" Width="640" Height="400">

    <Grid x:Name="grid_page_users" Background="#FFCFE6E0" Width="640" Height="400" Margin="2,0,-2,-1">
        <ListView x:Name="listview_users" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="640" Background="#FFCFE6E0">
            <ListView.View>
                <GridView x:Name="gr" >
                    <GridView.Columns >
                        <GridViewColumn Width="70" DisplayMemberBinding="{Binding Path= id_users}"  Header="Номер"/>
                        <GridViewColumn Width="50" DisplayMemberBinding="{Binding Path=users_role }" Header="Роль"/>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path= users_lastname}" Header="Фамилия"/>
                        <GridViewColumn Width="80" DisplayMemberBinding="{Binding Path= users_firstname}" Header="Имя"/>
                        <GridViewColumn Width="80" DisplayMemberBinding="{Binding Path= users_middlename}" Header="Отчество"/>
                        <GridViewColumn x:Name="dateB" Width="120" DisplayMemberBinding="{Binding Path= users_datebirth, StringFormat={}{0:dd/MM/yyyy}}"  Header="Дата рождения"/>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding Path= users_phone}" Header="Телефон"/>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path= users_mail}" Header="Почта"/>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path= users_login}" Header="Логин"/>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path= users_password}" Header="Пароль"/>

                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button_add" Content="Добавить" HorizontalAlignment="Left" Height="40" Margin="225,270,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="button_add_Click"/>
        <Button x:Name="button_edit" Content="Изменить" HorizontalAlignment="Left" Height="40" Margin="365,270,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="button_edit_Click"/>
        <Button x:Name="button_del" Content="Удалить" HorizontalAlignment="Left" Height="40" Margin="505,270,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="button_del_Click"/>
        <Button x:Name="button_materials" Content="Товары" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="20" Click="button_materials_Click"/>
        <Button x:Name="button_exit" Content="Выход" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="20" Click="button_exit_Click"/>


    </Grid>
</Page>
