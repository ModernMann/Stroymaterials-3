        <TextBox x:Name="text_capctha" HorizontalAlignment="Left" FontSize="20" Margin="14,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontFamily="Segoe Print" Height="32"/>
        <Button x:Name="button_generate" Content="Сгенерировать" HorizontalAlignment="Left" Margin="160,22,0,0" VerticalAlignment="Top" Width="113" Height="32" RenderTransformOrigin="5.667,-1.2" Click="button_generate_Click"/>

